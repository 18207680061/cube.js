#!/usr/bin/env node

const fs = require('fs');
const path = require('path');

const isDev = fs.existsSync(path.join(__dirname, '..', 'tsconfig.json'));
const hasSrc = fs.existsSync(path.join(__dirname, '..', 'dist', 'src', 'post-install.js'));

if (!hasSrc && isDev) {
  console.log('Skipping post-install because it was not compiled');
  return;
}

require('../dist/src/post-install');
